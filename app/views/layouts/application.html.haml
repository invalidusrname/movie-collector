!!!
%html{ :dir => "ltr", :lang => "en-US", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{'http-equiv' => 'Content-Type', 'content' => 'text/html; charset=utf-8'}
    %meta{'name' => 'keywords', 'content' => 'dvd catalog, blu-ray catalog, movie organizer, movie database, movie, dvd, collection'}
    %meta{'name' => 'description', 'content' => 'MovieCollector allows you to collect, catalogue and rate your favorite movies'}
    = csrf_meta_tag

    = javascript_include_tag("http://ajax.googleapis.com/ajax/libs/jquery/1.4.0/jquery.min.js").html_safe
    = javascript_include_tag("jquery.easing.min", :cache => false)
    = javascript_include_tag("superfish", :cache => false)
    = javascript_include_tag("rails", :cache => false)
    = javascript_include_tag("application", :cache => false)

    %title
      = @title ? "#{@title} - Movie Collector" : "Movie Collector - Catalog your collection of movies"
    = yield(:head)
  %body
    #pages
    #pagewrapper
      = render_or_default('header')
      = render_or_default('topnav')
      #main
        = render :partial => 'shared/flashes'
        = yield
      = render_or_default('footer')
    :javascript
      var ratingsL10n = {
      plugin_url: "http://phiyaz.turkhitbox.com/wp-content/plugins/wp-postratings",
      ajax_url: "http://phiyaz.turkhitbox.com/wp-content/plugins/wp-postratings/wp-postratings.php",
      text_wait: "Please rate only 1 post at a time.",
      image: "phiyaz_star",
      image_ext: "gif",
      max: "5",
      show_loading: "1",
      show_fading: "1",
      custom: "0"
      };
      var ratings_mouseover_image=new Image();ratings_mouseover_image.src=ratingsL10n.plugin_url+"/images/"+ratingsL10n.image+"/rating_over."+ratingsL10n.image_ext;
    %script{ :src => "http://phiyaz.turkhitbox.com/wp-content/plugins/wp-postratings/postratings-js.js?ver=1.50", :type => "text/javascript" }
    /
      [if IE 6]>
      <script type="text/javascript" src="http://phiyaz.turkhitbox.com/wp-content/themes/phiyaz_v1/js/DD_belatedPNG_0.0.8a-min.js"></script>
      <script> DD_belatedPNG.fix('#header'); </script>
      <![endif]

    / = render :partial => 'shared/analytics'
