%h1= @title = 'Box Office'


#outnow

  %h2 Top 10 in Theaters

  %table
    %thead
      %tr
        %th 
        %th Title
        %th Earned
        %th 
    %tbody
      - @films.each_with_index do |film, index|
        %tr
          %td= index + 1
          %td= link_to film.title, film.url
          %td
            = "#{film.amount}M"
          %td= link_to "Buy Tickets", film.ticket_url

#thisweek

  %h2 Out this week

  %table
    %thead
      %tr
        %th 
        %th Title
        %th Release Date
        %th 
    %tbody
      - @this_weeks_films.each_with_index do |film, index|
        %tr
          %td= index + 1
          %td= link_to film.title, film.url
          %td= rel_date(film.release_date).capitalize
          - if film.release_date <= Date.today
            %td= link_to "Buy Tickets", film.ticket_url
