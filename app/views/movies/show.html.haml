%h2 
  =h @movie.title 

%p
  = image_tag movie_image(@movie), :title => @movie.title

%p
  %b Format:
  =h @movie.format 

- if @movie.asin?
  %p
    %b ASIN:
    = (@movie.image_link?) ? link_to(@movie.asin, @movie.image_link) : @movie.asin

%p
  %b Rating: 
  %div{:id => "rating_#{@movie.id}" }

= link_to 'Edit', edit_movie_path(@movie) |
= link_to 'Back', movies_path